pipeline {
    agent none
    
    tools { nodejs "nodejs12" }

    stages {
        stage('Checkout repository') {
            agent any
            steps {
                checkout scm
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'node:12.19.0-alpine3.9'
                }
            }
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
    }
}